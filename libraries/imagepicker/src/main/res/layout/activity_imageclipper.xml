<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black" >

    <com.telchina.image.imagecliper.ClipImageLayout
        android:id="@+id/id_clipImageLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/rl_botom" />

    <RelativeLayout
        android:id="@+id/rl_botom"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="@color/app_backgroud_2"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="6dp" >

        <Button
            android:id="@+id/id_action_clip"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/style_bt_lighttheme_theme"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="@dimen/app_text_16_middle" />
    </RelativeLayout>

</RelativeLayout>