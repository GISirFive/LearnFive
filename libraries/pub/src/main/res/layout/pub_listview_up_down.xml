<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<com.widget.pulltorefresh.PtrFrameLayout
		android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ptr_pull_to_fresh="true" >

		<com.widget.pulltorefresh.header.MaterialHeader
	        android:id="@+id/layout_header"
	        android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingTop="6dp"
        	android:paddingBottom="6dp" />
		
	    <com.widget.pulltorefresh.loadmore.LoadMoreListViewContainer
	        android:id="@+id/layout_footer"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" >
		    
		    <ListView
		        android:id="@+id/listview_content"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:cacheColorHint="#00000000"
		        android:divider="@color/app_divider"
				android:dividerHeight="1px"
		        android:scrollbars="none"
		        android:fadingEdge="none"
		        android:fastScrollEnabled="false"
		        android:footerDividersEnabled="false"
		        android:headerDividersEnabled="false"
		        android:descendantFocusability="blocksDescendants" >
		    </ListView>
	        
	    </com.widget.pulltorefresh.loadmore.LoadMoreListViewContainer>
    
	</com.widget.pulltorefresh.PtrFrameLayout>
    

</RelativeLayout>